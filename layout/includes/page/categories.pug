h1.page-title= _p('page.category')
.category-lists
    //- 文章分类统计图
    #categories-chart(data-parent="true",style="border-radius: 8px; height: 300px; padding: 10px;")
    //- 分类去区
    .tag-cloud-list.is-center
        each item in site.categories.find({ parent: { $exists: false } }).data
            a(href=url_for(item.path))
                span.tags-punctuation
                    i.solitude.fas.fa-hashtag
                    = item.name
                    span.tagsPageCount= item.length
